<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/teal_700"
    tools:context=".ui.registrarcelular.RegistrarCelularFragment">
    <ScrollView
        android:id="@+id/scrollview_celular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/registrar_celular"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registre su equipo"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/perId_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elegir Usuario"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:textSize="20sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/equSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Número Serial"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"

                    />
                <Button
                    android:id="@+id/autogenerar_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="8dp"
                    android:text="Autogenerar"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/linea_celular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Linea Telefónica celular"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_vertical"

                    />
                <Button
                    android:id="@+id/autogenerar_linea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="8dp"
                    android:text="Autogenerar"/>

            </LinearLayout>

            <EditText
                android:id="@+id/marca_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:hint="Marca del celular"/>

            <EditText
                android:id="@+id/descripcion_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:hint="Descripción"/>

            <Button
                android:id="@+id/estado_celular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Estado"
                android:textSize="20dp"
                />



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/registrar_celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview_celular"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Registrar Celular"/>

</androidx.constraintlayout.widget.ConstraintLayout>